<!DOCTYPE html>
<html lang="es">
    <head>
    	<title>Amigos - Facebluff</title>
        <meta name="description" content="Facebluff">
        <meta charset ="utf-8"/>
        <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
        <link rel="icon" href="favicon.ico" type="image/x-icon">
        <link type="text/css" rel="stylesheet" href="css/questions.css">
        <link type="text/css" rel="stylesheet" href="css/answerquestion.css">
    </head>
    <body>
        <header>
            <div class="sup">
                FACEBLUFF
            </div>
            <div class="navbar">           
                <a href="profile">Perfil</a>        
                <a href="friends">Amigos</a>        
                <a class="active" href="#">Preguntas</a>        
                <a href="logout">Desconectar</a>
                <% if(data) { %>
                    <a class="disabled"> <%= data.points %> pts.</a>
                <% } %>
            </div>
        </header>
        <div id="content">
            <% if (qInfo !== null) { %>
                <h2><%= qInfo.question_text %></h2>
                <ul>
                    <% qInfo.answers.forEach(p=>{ %>
                        <form method="POST" action="/answerQuestion">
                            <input type="hidden" name="answer" value="<%=p.text%>">
                            <input name="qid" type="hidden" value="<%= qInfo.id %>">
                            <li class="questions">
                                <div class="answ">
                                    <button class="profile_button" type="submit">Responder</button>
                                    <div class="cen"><%= p.text %></div>
                                </div>
                            </li>
                        </form>
                    <% }) %>
 
                    <form method="POST" action="/answerQuestion">
                        <input name="qid" type="hidden" value="<%= qInfo.id %>">
                        <li class="questions answ"><button class="profile_button" type="submit">Responder</button> <input type="text" name="answer" placeholder="Otra respuesta"></li>
                    </form>                    
                </ul>
            <% } else { %>
                <h2>Adivinando la respuesta de <%= guess.user %></h2>
                <ul>
                    <% answers.forEach(p=>{ %>
                        <form method="POST" action="/finalguess">
                            <input type="hidden" name="answer" value="<%=p.text%>">
                            <input name="correctguess" type="hidden" value="<%= p.Qid %>">
                            <li class="questions answ"><button type="submit">Responder</button> <%= p.text %></li>
                        </form>
                    <% }) %>     
                </ul>
            <% } %>
        </div>
    </body>
</html>